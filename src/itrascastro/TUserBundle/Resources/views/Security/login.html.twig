{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'bundles/tuser/css/sign_in.css'
        'bundles/tuser/css/common.css'
        filter='cssrewrite'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="container separator">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData) }}</div>
                {% endif %}

                <div class="account-wall">
                    <img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
                         alt="">
                    <form class="form-signin" action="{{ path('tuser_security_loginCheck') }}" method="post">
                        <input class="form-control" placeholder="Username" type="text" id="username" name="_username" value="{{ last_username }}" />
                        <input class="form-control" placeholder="Password" type="password" id="password" name="_password" />

                        <div>Remember me <input type="checkbox" name="_remember_me" /></div>

                        <button class="btn btn-lg btn-primary btn-block separator" type="submit">Sign in</button>
                        <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                    </form>
                </div>
                <a href="{{ path('tuser_register_signup') }}" class="text-center new-account">Create an account</a>
            </div>
        </div>
    </div>
{% endblock %}